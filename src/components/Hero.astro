<style>
    .sand {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        pointer-events: none;
        z-index: 1;
    }

    .sand-particle {
        position: absolute;
        background: linear-gradient(to bottom right, #d3a55c, #c19a6b);
        border-radius: 50%;
        animation: fall linear infinite;
        opacity: 0;
    }

    @keyframes fall {
        0% {
            transform: translate(0, -10px) rotate(0deg);
            opacity: 0;
        }
        10% {
            opacity: 0.8;
        }
        90% {
            opacity: 0.8;
        }
        100% {
            transform: translate(100px, 100vh) rotate(360deg);
            opacity: 0;
        }
    }

    /* Generate 50 unique sand particles */
    .sand-particle:nth-child(1) { left: 5%; width: 2px; height: 2px; animation-duration: 3s; animation-delay: 0s; }
    .sand-particle:nth-child(2) { left: 10%; width: 3px; height: 3px; animation-duration: 4s; animation-delay: -1s; }
    .sand-particle:nth-child(3) { left: 15%; width: 2px; height: 2px; animation-duration: 3.5s; animation-delay: -0.5s; }
    .sand-particle:nth-child(4) { left: 20%; width: 4px; height: 4px; animation-duration: 4.5s; animation-delay: -2s; }
    .sand-particle:nth-child(5) { left: 25%; width: 2px; height: 2px; animation-duration: 3s; animation-delay: -1.5s; }
    .sand-particle:nth-child(6) { left: 30%; width: 3px; height: 3px; animation-duration: 4s; animation-delay: -2.5s; }
    .sand-particle:nth-child(7) { left: 35%; width: 2px; height: 2px; animation-duration: 3.5s; animation-delay: -0.7s; }
    .sand-particle:nth-child(8) { left: 40%; width: 4px; height: 4px; animation-duration: 4.5s; animation-delay: -1.8s; }
    .sand-particle:nth-child(9) { left: 45%; width: 2px; height: 2px; animation-duration: 3s; animation-delay: -2.3s; }
    .sand-particle:nth-child(10) { left: 50%; width: 3px; height: 3px; animation-duration: 4s; animation-delay: -3s; }
    .sand-particle:nth-child(11) { left: 55%; width: 2px; height: 2px; animation-duration: 3.5s; animation-delay: -1.2s; }
    .sand-particle:nth-child(12) { left: 60%; width: 4px; height: 4px; animation-duration: 4.5s; animation-delay: -2.7s; }
    .sand-particle:nth-child(13) { left: 65%; width: 2px; height: 2px; animation-duration: 3s; animation-delay: -0.3s; }
    .sand-particle:nth-child(14) { left: 70%; width: 3px; height: 3px; animation-duration: 4s; animation-delay: -1.6s; }
    .sand-particle:nth-child(15) { left: 75%; width: 2px; height: 2px; animation-duration: 3.5s; animation-delay: -2.1s; }
    .sand-particle:nth-child(16) { left: 80%; width: 4px; height: 4px; animation-duration: 4.5s; animation-delay: -0.9s; }
    .sand-particle:nth-child(17) { left: 85%; width: 2px; height: 2px; animation-duration: 3s; animation-delay: -1.4s; }
    .sand-particle:nth-child(18) { left: 90%; width: 3px; height: 3px; animation-duration: 4s; animation-delay: -2.9s; }
    .sand-particle:nth-child(19) { left: 95%; width: 2px; height: 2px; animation-duration: 3.5s; animation-delay: -0.2s; }
    .sand-particle:nth-child(20) { left: 100%; width: 4px; height: 4px; animation-duration: 4.5s; animation-delay: -1.7s; }

    .hero-content {
        position: relative;
        z-index: 2;
    }
</style>

<div class="hero min-h-screen relative overflow-hidden">
    <div class="sand">
        {[...Array(20)].map((_, i) => (
            <div class="sand-particle" />
        ))}
    </div>
    <!-- Background image with overlay -->
    <div class="absolute inset-0 z-0">
        <img 
            src="arrakis-landscape.png" 
            alt="Arrakis Desert" 
            class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-black/40 bg-gradient-to-b from-transparent to-[#2c1810]/80"></div>
    </div>

    <!-- Content -->
    <div class="container mx-auto px-4 py-32 relative z-10">
        <div class="flex flex-col items-center gap-6 hero-content">
            <img 
                src="arrakis-logo.png" 
                alt="ARRAKIS Logo" 
                class="w-32 h-32 rounded-full bg-[#d35400]/10 p-2 mb-4 backdrop-blur-sm border-2 border-[#ff7f50]/30"
            />
            <h1 class="text-5xl md:text-7xl font-bold text-center text-[#f5e6d3]">
                ARRAKIS
            </h1>
            <p class="text-xl md:text-2xl text-center text-[#ff7f50] font-light mb-2 max-w-3xl">
                <b class="text-[#d35400]">A</b>I <b class="text-[#d35400]">R</b>esearch, <b class="text-[#d35400]">R</b>esources, <b class="text-[#d35400]">A</b>pplications, <b class="text-[#d35400]">K</b>nowledge, <b class="text-[#d35400]">I</b>nsights, and <b class="text-[#d35400]">S</b>olutions
            </p>
            <p class="text-lg md:text-xl text-center max-w-3xl mx-auto text-[#c19a6b] font-light">
                Google Cloud AI Partners Community in Southeast Asia (SEA)
            </p>
        </div>
    </div>
</div>
